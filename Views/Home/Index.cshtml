                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @section Scripts {
                <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
                    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
                <script>
                    let map;
                    let nexradLayer = null;
                    let retryCount = 0;
                    const maxRetries = 3;
                    const retryDelay = 5000;
                    let radarEnabled = false;

                    function initMap() {
                        if (!map) {
                            map = L.map('map', {
                                center: [39.8283, -98.5795],
                                zoom: 4,
                                minZoom: 3,
                                maxZoom: 18,
                                zoomControl: true,
                                zoomAnimation: false // Disable zoom animation to prevent overlay issues
                            });

                            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                            }).addTo(map);

                            // Add event listeners for map movement and zoom
                            // The tile layer will automatically update with the map's zoom and pan
                            // No need for manual updates on zoom or move events
                            map.on('zoomend', () => {
                                console.log("Map zoomed to level:", map.getZoom());
                            });

                            map.on('moveend', () => {
                                console.log("Map moved to:", map.getCenter());
                            });

                            // Initialize controls
                            initializeControls();

                            // Log initial map state
                            console.log("Map initialized with center:", map.getCenter(), "and zoom:", map.getZoom());
                        }
                    }

                    function initializeControls() {
                        // Location button
                        document.getElementById('locate-button')?.addEventListener('click', () => {
                            if (navigator.geolocation) {
                                navigator.geolocation.getCurrentPosition(
                                    position => {
                                        const { latitude, longitude } = position.coords;
                                        map.setView([latitude, longitude], 10);
                                        updateStormData(latitude, longitude);
                                    },
                                    error => {
                                        console.error('Error getting location:', error);
                                        alert('Unable to get your location. Please enable location services and try again.');
                                    }
                                );
                            } else {
                                alert('Geolocation is not supported by your browser.');
                            }
                        });

                        // NEXRAD button
                        document.getElementById('nexrad-button')?.addEventListener('click', () => {
                            const nexradContainer = document.getElementById('nexrad-container');
                            if (nexradContainer) {
                                const isVisible = nexradContainer.style.display === 'block';
                                nexradContainer.style.display = isVisible ? 'none' : 'block';
                                radarEnabled = !isVisible;
                                if (!isVisible) {
                                    // Always remove any existing layer first
                                    if (nexradLayer) {
                                        map.removeLayer(nexradLayer);
                                        nexradLayer = null;
                                    }
                                    // Then update with a fresh layer
                                    updateNEXRADLayer();
                                } else if (nexradLayer) {
                                    map.removeLayer(nexradLayer);
                                    nexradLayer = null;
                                }
                            }
                        });

                        // NEXRAD controls
                        document.getElementById('nexrad-opacity')?.addEventListener('input', e => {
                            if (nexradLayer) {
                                nexradLayer.setOpacity(e.target.value / 100);
                            }
                        });

                        document.getElementById('nexrad-product')?.addEventListener('change', updateNEXRADLayer);
                        document.getElementById('nexrad-site')?.addEventListener('change', updateNEXRADLayer);
                    }

                    function updateNEXRADLayer() {
                        if (!radarEnabled) return;

                        // Always remove the existing layer first
                        if (nexradLayer) {
                            map.removeLayer(nexradLayer);
                            nexradLayer = null;
                        }

                        // Get current map center and zoom level
                        var center = map.getCenter();
                        var zoom = map.getZoom();
                        console.log(
                            "Getting radar data for coordinates:",
                            center.lat,
                            center.lng,
                            "at zoom level:",
                            zoom
                        );

                        // Show loading indicator
                        const loadingIndicator = document.getElementById('loading-indicator');
                        const errorMessage = document.getElementById('error-message');
                        if (loadingIndicator) loadingIndicator.style.display = 'flex';
                        if (errorMessage) errorMessage.style.display = 'none';

                        // Create a tile layer for the radar overlay
                        // This ensures proper synchronization with the map's zoom and pan
                        nexradLayer = L.tileLayer('https://mesonet.agron.iastate.edu/cache/tile.py/1.0.0/nexrad-n0q-900913/{z}/{x}/{y}.png', {
                            opacity: 0.7,
                            attribution: 'Radar data from Iowa Environmental Mesonet',
                            maxZoom: 18,
                            minZoom: 3,
                            tileSize: 256,
                            errorTileUrl: 'data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=',
                            // Add a custom function to handle zoom levels
                            getTileUrl: function (coords) {
                                // For zoom levels below 7, use zoom level 7 tiles but scale them appropriately
                                const effectiveZoom = Math.max(7, coords.z);
                                // Use the highest resolution product available (n0q-900913)
                                return `https://mesonet.agron.iastate.edu/cache/tile.py/1.0.0/nexrad-n0q-900913/${effectiveZoom}/${coords.x}/${coords.y}.png`;
                            }
                        }).addTo(map);

                        // Add error handling
                        nexradLayer.on("error", function (e) {
                            console.error("Error loading radar image:", e);
                            if (nexradLayer) {
                                map.removeLayer(nexradLayer);
                                nexradLayer = null;
                            }
                            if (errorMessage) errorMessage.style.display = 'flex';
                        });

                        // Hide loading indicator
                        if (loadingIndicator) loadingIndicator.style.display = 'none';
                    }

                    // Function to convert wind direction angle to compass direction
                    function getWindDirection(degrees) {
                        const directions = ['N', 'NNE', 'NE', 'ENE', 'E', 'ESE', 'SE', 'SSE', 'S', 'SSW', 'SW', 'WSW', 'W', 'WNW', 'NW', 'NNW'];
                        const index = Math.round(degrees / 22.5) % 16;
                        return directions[index];
                    }

                    // Function to update storm data
                    async function updateStormData(latitude, longitude) {
                        try {
                            // Show loading indicator for weather data
                            const weatherInfo = document.getElementById('weather-info');
                            const weatherLoadingIndicator = document.getElementById('weather-loading-indicator');
                            const weatherErrorMessage = document.getElementById('weather-error-message');

                            // Set up loading timeout
                            const loadingTimeout = setTimeout(() => {
                                if (weatherLoadingIndicator) weatherLoadingIndicator.style.display = 'block';
                                if (weatherInfo) weatherInfo.classList.add('updating');
                            }, 1000); // Show loading after 1 second

                            if (weatherErrorMessage) weatherErrorMessage.classList.add('d-none');

                            // Show loading indicator for storm info
                            const stormInfo = document.getElementById('storm-info');
                            const stormLoadingIndicator = document.getElementById('storm-loading-indicator');
                            const stormErrorMessage = document.getElementById('storm-error-message');

                            // Set up loading timeout for storm data
                            const stormLoadingTimeout = setTimeout(() => {
                                if (stormLoadingIndicator) stormLoadingIndicator.style.display = 'block';
                                if (stormInfo) stormInfo.classList.add('updating');
                            }, 1000); // Show loading after 1 second

                            if (stormErrorMessage) stormErrorMessage.classList.add('d-none');

                            // Fetch storm data from the API
                            const response = await fetch(`/api/Weather/storm-data?latitude=${latitude}&longitude=${longitude}`);
                            if (!response.ok) {
                                throw new Error(`HTTP error! status: ${response.status}`);
                            }
                            const data = await response.json();
                            console.log("Storm data:", data);

                            // Clear loading timeouts since we got the data
                            clearTimeout(loadingTimeout);
                            clearTimeout(stormLoadingTimeout);

                            if (data) {
                                // Update weather data card
                                if (data.temperature !== undefined) {
                                    // Convert Celsius to Fahrenheit: (C × 9/5) + 32
                                    const fahrenheit = (data.temperature * 9 / 5) + 32;
                                    document.getElementById('temperature').textContent = `${fahrenheit.toFixed(1)}°F`;
                                }

                                if (data.windSpeed !== undefined) {
                                    document.getElementById('wind-speed').textContent = `${data.windSpeed} mph`;
                                }

                                if (data.windDirection !== undefined) {
                                    const compassDirection = getWindDirection(data.windDirection);
                                    document.getElementById('wind-direction').textContent = `${compassDirection} (${data.windDirection}°)`;
                                }

                                if (data.stationName) {
                                    document.getElementById('station-name').textContent = data.stationName;
                                    document.getElementById('station-distance').textContent = `Distance: ${data.distance.toFixed(1)} miles`;
                                }

                                if (data.timestamp) {
                                    document.getElementById('last-updated').textContent = new Date(data.timestamp).toLocaleString();
                                } else {
                                    document.getElementById('last-updated').textContent = new Date().toLocaleString();
                                }

                                // Update storm info card (if we have extended data)
                                if (data.currentConditions) {
                                    // Set storm type
                                    document.getElementById('storm-type').textContent = data.currentConditions.stormType || 'None';
                                    document.getElementById('storm-description').textContent = data.currentConditions.stormDescription || 'No storm activity';

                                    // Set precipitation
                                    document.getElementById('precipitation').textContent = data.currentConditions.precipitation ?
                                        `${data.currentConditions.precipitation} in` : 'None';

                                    // Set storm intensity
                                    if (data.currentConditions.stormIntensity !== undefined) {
                                        document.getElementById('storm-intensity').style.width = `${data.currentConditions.stormIntensity * 20}%`;
                                    } else {
                                        document.getElementById('storm-intensity').style.width = '0%';
                                    }
                                } else {
                                    // Default values when no storm data
                                    document.getElementById('storm-type').textContent = 'None';
                                    document.getElementById('storm-description').textContent = 'No storm activity';
                                    document.getElementById('precipitation').textContent = 'None';
                                    document.getElementById('storm-intensity').style.width = '0%';
                                    document.getElementById('storm-speed').textContent = 'N/A';
                                    document.getElementById('storm-direction').textContent = 'N/A';
                                    document.getElementById('lightning-status').textContent = 'None';
                                }
                            }

                            // Update alerts if they exist
                            if (data && data.alerts && data.alerts.length > 0) {
                                const alertsContainer = document.getElementById('alerts-container');
                                const alertsList = document.getElementById('alerts-list');
                                const alertText = document.getElementById('alert-text');

                                if (alertsContainer) alertsContainer.style.display = 'block';
                                if (alertText) alertText.textContent = `${data.alerts.length} Active Alert(s)`;

                                if (alertsList) {
                                    alertsList.innerHTML = '';
                                    data.alerts.forEach(alert => {
                                        const alertElement = document.createElement('div');
                                        alertElement.className = 'alert alert-warning mb-2';
                                        alertElement.innerHTML = `
                                                                                            <h6>${alert.event}</h6>
                                                                                            <p class="mb-1"><strong>Severity:</strong> ${alert.severity}</p>
                                                                                            <p class="mb-1"><strong>Urgency:</strong> ${alert.urgency}</p>
                                                                                            <p class="mb-1">${alert.description}</p>
                                                                                            <small>Valid: ${new Date(alert.startTime).toLocaleString()} - ${new Date(alert.endTime).toLocaleString()}</small>
                                                                                        `;
                                        alertsList.appendChild(alertElement);
                                    });
                                }
                            } else {
                                const alertsContainer = document.getElementById('alerts-container');
                                const alertText = document.getElementById('alert-text');

                                if (alertsContainer) alertsContainer.style.display = 'none';
                                if (alertText) alertText.textContent = 'No Active Alerts';
                            }

                            // Hide loading indicators
                            if (weatherLoadingIndicator) weatherLoadingIndicator.style.display = 'none';
                            if (weatherInfo) weatherInfo.classList.remove('updating');
                            if (stormLoadingIndicator) stormLoadingIndicator.style.display = 'none';
                            if (stormInfo) stormInfo.classList.remove('updating');

                        } catch (error) {
                            console.error("Error fetching weather/storm data:", error);
                            // Show error for weather data
                            const weatherErrorMessage = document.getElementById('weather-error-message');
                            if (weatherErrorMessage) {
                                weatherErrorMessage.classList.remove('d-none');
                                weatherErrorMessage.textContent = `Error loading weather data: ${error.message}`;
                            }
                            const weatherLoadingIndicator = document.getElementById('weather-loading-indicator');
                            if (weatherLoadingIndicator) weatherLoadingIndicator.style.display = 'none';
                            const weatherInfo = document.getElementById('weather-info');
                            if (weatherInfo) weatherInfo.classList.remove('updating');

                            // Show error for storm data
                            const stormErrorMessage = document.getElementById('storm-error-message');
                            if (stormErrorMessage) {
                                stormErrorMessage.classList.remove('d-none');
                                stormErrorMessage.textContent = `Error loading storm data: ${error.message}`;
                            }
                            const stormLoadingIndicator = document.getElementById('storm-loading-indicator');
                            if (stormLoadingIndicator) stormLoadingIndicator.style.display = 'none';
                            const stormInfo = document.getElementById('storm-info');
                            if (stormInfo) stormInfo.classList.remove('updating');
                        }
                    }

                    // Initialize the map when the page loads
                    document.addEventListener('DOMContentLoaded', initMap);
                </script>
            }
